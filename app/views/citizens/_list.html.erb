<form action="citizens">
  <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
    <div class="sm:col-span-4">
      Search: <input type="text" name="name_start" placeholder="Search citizens" class="bg-gray-100 text-sm text-gray-800 transition border focus:outline-none focus:border-gray-700 rounded py-1 px-2 pl-10 appearance-none leading-normal">
    </div>
  </div>
</form>

<table class="w-full p-5 text-gray-700">
  <thead>
    <tr>
      <th class="text-left text-blue-900">Photo</th>
      <th class="text-left text-blue-900">Name</th>
      <th class="text-left text-blue-900">Status</th>
      <th class="text-left text-blue-900">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @citizens.each do |citizen| %>
    <tr>
      <td><%= citizen.photo.attached? ? image_tag(citizen.photo.variant(resize_to_limit: [200, 200])) : nil %></td>
      <td><%= citizen.name %></td>
      <td><%= citizen.status %></td>
      <td class="flex flex-row">
        <%= link_to('Edit', edit_municipy_citizen_path(citizen.municipy_id, citizen.id), class: "rounded mt-6 px-4 bg-blue-300") %>
        <%= link_to "show modal", address_municipy_citizen_path(citizen.municipy_id, citizen.id), remote: true %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>